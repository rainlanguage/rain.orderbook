{
  "build": {
    "beforeDevCommand": "ob-tauri-before-build && npm run dev",
    "beforeBuildCommand": "ob-tauri-before-build",
    "beforeBundleCommand": "ob-tauri-before-bundle",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "Raindex",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "save": true,
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true
      },
      "window": {
        "startDragging": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "deb",
        "nsis",
        "msi",
        "app",
        "dmg",
        "updater"
      ],
      "identifier": "com.rainlanguage.orderbook",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "minimumSystemVersion": "11",
        "frameworks": [
          "../lib/libintl.8.dylib",
          "../lib/libiconv.2.dylib",
          "../lib/libcharset.1.dylib",
          "../lib/libusb-1.0.0.dylib",
          "../lib/libbz2.1.dylib"
        ]
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "width": 1200,
        "height": 700,
        "minWidth": 1000,
        "minHeight": 600,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ]
  }
}