{
	"name": "@rainlanguage/ui-components",
	"version": "0.0.1",
	"description": "A component library for building Svelte applications to be used with Rainlang.",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"svelte": "./dist/index.js"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write src",
		"lint": "prettier --list-different src && eslint src",
		"lint-check": "eslint src",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"format-check": "prettier --list-different src",
		"svelte-lint-format-check": "npm run lint && npm run check"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"@tanstack/svelte-query": "^5.59.20",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@rainlanguage/orderbook": "*",
		"flowbite-svelte": "^0.47.3",
		"tailwind-merge": "^2.5.4"
	}
}
